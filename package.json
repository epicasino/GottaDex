{
  "name": "gottadex",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:epicasino/GottaDex.git",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "backend": "node server/server.js --ignore client",
    "frontend": "cd client && yarn run dev",
    "develop": "concurrently \"cd server && yarn run watch\" \"cd client && yarn run dev\"",
    "install": "cd server && yarn && cd ../client && yarn",
    "build": "cd client && yarn run build"
  }
}
